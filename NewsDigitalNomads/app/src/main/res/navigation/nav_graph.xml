<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/wallNewsFragment">

    <fragment
        android:id="@+id/wallNewsFragment"
        android:name="com.gmail.sas.newsdigitalnomads.presentation.screen.wallNews.WallNewsFragment"
        android:label="WallNewsFragment" >
        <action
            android:id="@+id/actionWallToWeb"
            app:destination="@id/newsWebView"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/newsWebView"
        android:name="com.gmail.sas.newsdigitalnomads.presentation.screen.newsWebView.NewsWebFragment"
        android:label="NewsWebView">
        <action
            android:id="@+id/actionWebToWall"
            app:destination="@id/wallNewsFragment" />
        <argument
            android:name="newsUrl"
            android:defaultValue='""'
            app:argType="string" />
        <argument
            android:name="positionNews"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>